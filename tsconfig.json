{
    "compilerOptions": {
        "experimentalDecorators": true,
        "allowJs": false,
        "checkJs": false,
        "noImplicitThis": true,
        "resolveJsonModule": true,
        "forceConsistentCasingInFileNames": true,
        "declaration": true,
        "skipLibCheck": true,
        "module": "commonjs",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "target": "es6",
        "strict": false,
        // "noImplicitAny": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "dist",
        "baseUrl": ".",
        "paths": {
            "*": [
                "node_modules/*",
                "src/types/*"
            ]
        }
    },
    "rules": {
        "interface-name": false
    },
    "include": [
        "src/**/*"
    ],
}